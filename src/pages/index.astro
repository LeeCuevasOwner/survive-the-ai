---
import Layout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import PostGrid from '../components/PostGrid.astro';
import FearIndexPreview from '../components/FearIndexPreview.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
---

<Layout>
  <!-- Full-bleed hero section -->
  <Hero />

  <!-- Main content grid -->
  <main class="bg-gray-200 dark:bg-gray-900 py-10">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white dark:bg-gray-800 p-8 md:p-10 shadow-xl rounded-xl grid grid-cols-1 md:grid-cols-3 gap-8">
        
        <!-- Main feed -->
        <div class="md:col-span-2 space-y-8">
          <PostGrid />
        </div>

        <!-- Sidebar -->
        <aside class="space-y-6">
          <FearIndexPreview />
          <NewsletterSignup />
        </aside>

      </div>
    </div>
  </main>
</Layout>
